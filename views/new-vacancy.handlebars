<main class="container">
  <form action="/job-vacancies/new" method="POST" class="default-form">
    <h3>General Information</h3>
    <div class="field">
      <label>Title</label>
      <input type="text" name="title" placeholder="e.g. ReactJS Developer" required>
    </div>
    <div class="field">
      <label>Company</label>
      <input type="text" name="company" placeholder="Company Name" required>
    </div>
    <div class="field">
      <label>Location</label>
      <input type="text" name="location" placeholder="e.g. United States" required>
    </div>
    <div class="field">
      <label>Salary</label>
      <input type="text" name="salary" placeholder="e.g. 150.000 USD" required>
    </div>

    <div class="field">
      <label>Logo</label>
      <input type="file" name="image" placeholder="Company Logo">
    </div>

    <div class="field">
      <label>Contract</label>
      <select name="contract">
        <option value="" disabled selected>Select</option>
        <option value="freelance">Freelance</option>
        <option value="fulltime">FullTime</option>
        <option value="parttime">PartTime</option>
        <option value="remote">Remote</option>
      </select>
    </div>

    <h3>Job Description</h3>

    <div class="field description">
      <label>Description</label>
      <input type="hidden" id="x" name="description">
      <trix-editor input="x"></trix-editor>
    </div>

    <h3>Add Skills</h3>
    <ul class="skill-set">
      {{#selectSkills a}}
      {{/selectSkills}}
    </ul>

    <div class="field center-horizontally">
      <input type="hidden" name="skills" id="skills">
      <input type="submit" value="Publish New Job" class="btn btn-blue">
    </div>
  </form>
</main>